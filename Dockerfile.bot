FROM golang:1.25-alpine AS build

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /out/tgtorrentbot ./cmd/tgtorrentbot

FROM alpine:3.20

RUN apk add --no-cache ca-certificates libc6-compat && \
    addgroup -S appgroup && adduser -S appuser -G appgroup

WORKDIR /app
COPY --from=build /out/tgtorrentbot ./tgtorrentbot

USER appuser

EXPOSE 80

CMD ["/app/tgtorrentbot"]
